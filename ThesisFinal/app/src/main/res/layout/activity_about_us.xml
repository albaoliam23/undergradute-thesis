<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_about_us"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/skyblue"
    android:orientation="vertical"
    tools:context="com.example.pikmi85.thesisfinal.activity.AboutUsActivity"
    android:weightSum="1">
    <ImageView
        android:id="@+id/logo"
        android:layout_width="@dimen/logo_w_h"
        android:layout_height="@dimen/logo_w_h"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="30dp"
        app:srcCompat="@mipmap/ic_logo"
        android:contentDescription=""
        tools:ignore="ContentDescription" />
    <TextView
        android:layout_width="207dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textSize="30sp"
        android:textAlignment="center"
        android:textColor="@color/darkorange"
        android:layout_marginBottom="10dp"
        android:text="EDUTOO"/>
    <TextView
        android:layout_width="254dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textSize="20sp"
        android:textAlignment="center"
        android:textColor="@color/darkorange"
        android:layout_marginBottom="10dp"
        android:text="This application is proposed and implemented by the researches from the University of the East Caloocan City. This serves as a system used to assess the proposed system in terms of competency and performance. "
        android:layout_weight="0.66" />
    <TextView
        android:layout_width="207dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textSize="15sp"
        android:textAlignment="center"
        android:textColor="@color/darkorange"
        android:layout_marginBottom="10dp"
        android:text="Copyright Â© 2017 University of the East Caloocan. All Rights Reserved
"/>
</LinearLayout>
