<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_selected_course_screen"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/br_gray"
    android:orientation="vertical"
    tools:context="com.example.pikmi85.thesisfinal.activity.SelectedCourseScreen">
        <ImageView
            android:layout_width="@dimen/logo2_w_h"
            android:layout_height="@dimen/logo2_w_h"
            android:layout_gravity="center_horizontal"
            app:srcCompat="@mipmap/ic_logo"
            android:contentDescription=""
            tools:ignore="ContentDescription" />
        <TextView
            android:id="@+id/txt_subj_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="30sp"
            android:textColor="@color/black"
            android:layout_marginBottom="10dp"
            android:text="SAMPLE"/>
        <TextView
            android:id="@+id/txt_subj_members_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:text="SAMPLE"/>
        <TextView
            android:id="@+id/txt_subj_teacher"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:layout_marginBottom="10dp"
            android:text="SAMPLE"/>
        <TextView
            android:id="@+id/txt_aboutsubj"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="15sp"
            android:textColor="@color/black"
            android:textStyle="italic"
            android:text="SAMPLE"/>

        <ListView
            android:id="@+id/listview"
            android:layout_marginTop="40dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:divider="?attr/colorControlActivated"
            android:background="@color/darkorange"
            android:textColor="@color/white" />
</LinearLayout>
