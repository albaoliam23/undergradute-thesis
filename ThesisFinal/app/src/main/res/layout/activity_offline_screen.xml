<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/skyblue"
    android:id="@+id/offline"
    android:orientation="vertical"
    tools:context="com.example.pikmi85.thesisfinal.activity.OfflineScreen"
    android:weightSum="1">
    <ImageView
        android:layout_width="139dp"
        android:layout_height="185dp"
        android:layout_gravity="center"
        app:srcCompat="@mipmap/ic_logo"
        android:contentDescription=""
        tools:ignore="ContentDescription" />
    <TextView
        android:id="@+id/txt_subj_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textSize="30sp"
        android:textColor="@color/white"
        android:layout_marginBottom="10dp"
        android:text="Offline Mode"/>
    <TextView
        android:id="@+id/txt_subj_teacher"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:layout_marginBottom="10dp"
        android:text="Available Reviewers:"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/fragment_photos_layout"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="0dp"
        android:layout_marginTop="0dp">
        <ListView
            android:id="@+id/listview"
            android:layout_gravity="top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/darkorange"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/txt_nogroup"
            android:background="@color/darkorange"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/no_pdf_yet"
            android:visibility="invisible"
            android:textSize="40sp"
            android:textColor="@color/black"
            android:paddingLeft="6dip"
            android:paddingRight="6dip"
            android:drawableStart="@drawable/book"/>


    </LinearLayout>
</LinearLayout>
