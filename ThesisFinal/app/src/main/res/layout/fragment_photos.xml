<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/br_gray"
    tools:context="com.example.pikmi85.thesisfinal.fragment.PhotosFragment">

    <!-- TODO: Update blank fragment layout -->


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/fragment_photos_layout"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="0dp"
        android:layout_marginTop="0dp">
        <ListView
            android:id="@+id/listview"
            android:layout_gravity="top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/darkorange"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/txt_nogroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/no_group_yet"
            android:visibility="invisible"
            android:textSize="40sp"
            android:textColor="@color/black"
            android:paddingLeft="6dip"
            android:paddingRight="6dip"
            android:drawableStart="@drawable/multyuser"/>


    </LinearLayout>

</RelativeLayout>
